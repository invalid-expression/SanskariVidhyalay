@{
    ViewData["Title"] = "Entry Deleted";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <style>
        body {
            background-color: #f8f9fa;
        }

        .container {
            margin-top: 100px;
        }

        .jumbotron {
            background-color: #d4edda;
            border-color: #c3e6cb;
        }

        .alert {
            border-radius: .25rem;
        }

        .btn-custom {
            background-color: #28a745;
            color: white;
        }

            .btn-custom:hover {
                background-color: #218838;
                color: white;
            }

        .footer {
            margin-top: 50px;
            text-align: center;
            color: #6c757d;
        }
    </style>
</head>
<body>
    <div class="container text-center">
        <div class="jumbotron">
            <h1 class="display-4">Entry Successfully Deleted</h1>
            <p class="lead">The entry has been successfully removed from the system.</p>
            <hr class="my-4">
            <p>We have updated our records, and the entry is no longer available.</p>
            <a class="btn btn-custom btn-lg" href="@Url.Action("Index", "Home")" role="button">Return to Home</a>
            <a class="btn btn-secondary btn-lg" href="@Url.Action("Admin", "Home")" role="button">View Student Details</a>
        </div>
        <div class="footer">
            <p>&copy; @DateTime.Now.Year Sanskari Vidhyalay. All rights reserved.</p>
        </div>
    </div>
</body>
</html>
